{
  "name": "rpapp-kiosk",
  "version": "1.0.0",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "tsc -b && vite build",
    "postbuild": "node scripts/generate-runtime-config.js",
    "preview": "vite preview --host 0.0.0.0 --port $PORT",
    "start": "node start.js",
    "deploy": "node deploy-kiosk.js",
    "deploy:help": "node deploy-kiosk.js --help",
    "lint": "eslint src",
    "lint:fix": "eslint src --fix",
    "type-check": "tsc --noEmit",
    "test": "jest --config jest.config.cjs",
    "test:watch": "jest --config jest.config.cjs --watch",
    "test:coverage": "jest --config jest.config.cjs --coverage",
    "test:ci": "jest --config jest.config.cjs --ci --coverage --maxWorkers=2",
    "test:unit": "jest --config jest.config.cjs --testPathPattern=__tests__/unit",
    "test:integration": "jest --config jest.config.cjs --testPathPattern=__tests__/integration",
    "test:fast": "jest --config jest.config.cjs --testPathPattern=__tests__/unit --watch",
    "test:debug": "jest --config jest.config.cjs --testPathPattern=__tests__/unit --verbose"
  },
  "dependencies": {
    "@tanstack/react-query": "^5.62.0",
    "@types/qrcode": "^1.5.5",
    "pi-kiosk-shared": "^2.1.9",
    "qrcode": "^1.5.4",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-router-dom": "^7.9.5",
    "serve": "^14.2.1",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@eslint/js": "^9.17.0",
    "@tanstack/react-query-devtools": "^5.62.0",
    "@testing-library/jest-dom": "^6.0.0",
    "@testing-library/react": "^14.0.0",
    "@testing-library/user-event": "^14.0.0",
    "@types/jest": "^29.5.0",
    "@types/react": "^18.2.0",
    "@types/react-dom": "^18.2.0",
    "@vitejs/plugin-react": "^4.3.3",
    "eslint": "^9.17.0",
    "eslint-plugin-react": "^7.37.3",
    "eslint-plugin-react-hooks": "^5.1.0",
    "eslint-plugin-react-refresh": "^0.4.16",
    "identity-obj-proxy": "^3.0.0",
    "jest": "^29.5.0",
    "jest-environment-jsdom": "^29.5.0",
    "ts-jest": "^29.1.0",
    "typescript": "^5.8.3",
    "typescript-eslint": "^8.18.2",
    "vite": "^5.4.10"
  }
}
