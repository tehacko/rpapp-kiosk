{
  "name": "rpapp-kiosk",
  "version": "1.0.0",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "tsc -b && vite build",
    "preview": "vite preview --host 0.0.0.0 --port $PORT",
    "start": "node start.js",
    "deploy": "node deploy-kiosk.js",
    "deploy:help": "node deploy-kiosk.js --help",
    "test": "jest --config jest.config.cjs",
    "test:watch": "jest --config jest.config.cjs --watch",
    "test:coverage": "jest --config jest.config.cjs --coverage",
    "test:ci": "jest --config jest.config.cjs --ci --coverage --maxWorkers=2",
    "test:unit": "jest --config jest.config.cjs --testPathPattern=__tests__/unit",
    "test:integration": "jest --config jest.config.cjs --testPathPattern=__tests__/integration",
    "test:fast": "jest --config jest.config.cjs --testPathPattern=__tests__/unit --watch",
    "test:debug": "jest --config jest.config.cjs --testPathPattern=__tests__/unit --verbose"
  },
  "dependencies": {
    "@types/qrcode": "^1.5.5",
    "pi-kiosk-shared": "^1.0.22",
    "qrcode": "^1.5.4",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "serve": "^14.2.1",
    "swr": "^2.3.6"
  },
  "devDependencies": {
    "@testing-library/jest-dom": "^6.0.0",
    "@testing-library/react": "^14.0.0",
    "@testing-library/user-event": "^14.0.0",
    "@types/jest": "^29.5.0",
    "@types/react": "^18.2.0",
    "@types/react-dom": "^18.2.0",
    "@vitejs/plugin-react": "^4.3.3",
    "identity-obj-proxy": "^3.0.0",
    "jest": "^29.5.0",
    "jest-environment-jsdom": "^29.5.0",
    "ts-jest": "^29.1.0",
    "typescript": "^5.8.3",
    "vite": "^5.4.10"
  }
}
